@page
@model LoginModel




<div class="col-lg-12 col-12">
    <div class="form-main">
        <div class="title">

                <h4>Login</h4>
       <h3>Use a local account to log in</h3>
        </div>
        <form class="form" id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="row">
                <div class="col-lg-12 col-12">
                    <div class="form-group">
                        <label asp-for="Input.UserName"></label>
                        <input asp-for="Input.UserName" aria-required="true" placeholder="">
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12 col-12">
                    <div class="form-group">
                        <label asp-for="Input.Password "></label>
                        <input asp-for="Input.Password" aria-required="true" placeholder="">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12 col-12">
                    <div >
                 
                        
                        
                        <label asp-for="Input.RememberMe" >
                            <input  asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group button">
                        <button id="registerSubmit" type="submit" class="btn ">LOG IN </button>
                    </div>
                </div>
                
                
                <div class="col-12">
                    
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>&nbsp; |

                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>&nbsp;|&nbsp;
                   
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                   
                </div>
                

            </div>
        </form>
    </div>
</div>









@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
