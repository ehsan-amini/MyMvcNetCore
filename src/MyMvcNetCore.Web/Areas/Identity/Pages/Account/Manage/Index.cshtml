@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}







<div class="col-lg-12 col-12">
    <div class="form-main">
        <div class="title">
            <partial name="_StatusMessage" for="StatusMessage" />
            <h4>@ViewData["Title"]</h4>
            <h3>Save Phone number</h3>
        </div>
        <form class="form" id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="row">
                <div class="col-lg-12 col-12">
                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input asp-for="Username"  disabled />
                   
                    </div>
                </div>
                <div class="col-lg-12 col-12">
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber"></label>
                        <input asp-for="Input.PhoneNumber" aria-required="true" placeholder="Please enter your phone number.">
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group button">
                        <button id="update-profile-button" type="submit" class="btn ">Save</button>
                    </div>
                </div>





            </div>
        </form>
    </div>
</div>














@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
