@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}


<div class="col-lg-12 col-12">
    <div class="form-main">
        <div class="title">



            <partial name="_StatusMessage" for="StatusMessage" />

            <h4>@ViewData["Title"]</h4>
            <h3>Update your Password</h3>
        </div>
        <form class="form" id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="row">



                @if (Model.IsEmailConfirmed)
                {
                    <text>
                        <div class="col-lg-12 col-12">
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" disabled="disabled">
                            </div>
                        </div>
                    </text>
                }
                else
                {
                    <text>
                        <div class="col-lg-12 col-12">
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" disabled="disabled">
                                <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail">Send verification email</button>
                            </div>
                        </div>
                    </text>
                }

                <div class="col-lg-12 col-12">
                    <div class="form-group">
                        <label asp-for="Input.NewEmail"></label>
                        <input asp-for="Input.NewEmail" aria-required="true" autocomplete="email" aria-required="true" placeholder="Please enter new email.">
                        <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                    </div>
                </div>






                <div class="col-12">
                    <div class="form-group button">
                        <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn">Change email</button>
                    </div>
                </div>




            </div>
        </form>
    </div>
</div>








@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
