@page
@model RegisterModel
<div class="col-lg-12 col-12">
    <div class="form-main">
        <div class="title">


            @if (User.IsInRole(SD.Role_Admin))
            {
                <h4>Register - Admin Portal</h4>
            }
            else
            {
                <h4>Register</h4>
            }




            <h3>Create a new account</h3>
        </div>
        <form class="form" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="row">
                <div class="col-lg-6 col-12">
                    <div class="form-group">
                        <label asp-for="Input.UserName"></label>
                        <input asp-for="Input.UserName" aria-required="true" placeholder="">
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-12">
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" aria-required="true" placeholder="name@example.com">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-12">
                    <div class="form-group">
                        <label asp-for="Input.FirstName"></label>
                        <input asp-for="Input.FirstName" aria-required="true" placeholder="">
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-12">
                    <div class="form-group">
                        <label asp-for="Input.LastName"></label>
                        <input asp-for="Input.LastName" aria-required="true" placeholder="">
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-12">
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" aria-required="true" placeholder="">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-12">
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" aria-required="true" placeholder="">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-12">
                    <div class="form-group">
                        <label asp-for="Input.Country"></label>
                        <input asp-for="Input.Country" aria-required="true" placeholder="">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-12">
                    <div class="form-group">
                        <label asp-for="Input.StreetAddress"></label>
                        <input asp-for="Input.StreetAddress" aria-required="true" placeholder="">
                        <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-12">
                    <div class="form-group">
                        <label asp-for="Input.City"></label>
                        <input asp-for="Input.City" aria-required="true" placeholder="">
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-12">
                    <div class="form-group">
                        <label asp-for="Input.State"></label>
                        <input asp-for="Input.State" aria-required="true" placeholder="">
                        <span asp-validation-for="Input.State" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-12">
                    <div class="form-group">
                        <label asp-for="Input.PostalCode"></label>
                        <input asp-for="Input.PostalCode" aria-required="true" placeholder="">
                        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-12">
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber"></label>
                        <input asp-for="Input.PhoneNumber" aria-required="true" placeholder="">
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                @if (User.IsInRole(SD.Role_Admin))
                {
                    <div class="col-lg-6 col-12">
                        <div class="form-group">
                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList">
                                <option disabled selected>-Select Role-</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12">
                        <div class="form-group">
                            <select asp-for="Input.CompanyId" style="display: none" asp-items="@Model.Input.CompanyList">
                                <option disabled selected>-Select Company-</option>
                            </select>
                        </div>
                    </div>
                }





                @*      <div class="col-12">
                    <div class="form-group message">
                        <label>your message<span>*</span></label>
                        <textarea name="message" placeholder=""></textarea>
                    </div>
                </div> *@



                <div class="col-12">
                    <div class="form-group button">
                        <button id="registerSubmit" type="submit" class="btn ">Register</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @*  <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js" integrity="sha512-DedNBWPF0hLGUPNbCYfj8qjlEnNE92Fqn7xd3Sscfu7ipy7Zu33unHdugqRD3c4Vj7/yLv+slqZhMls/4Oc7Zg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        $(document).ready(function () {
            $('#Input_Role').change(function () {
                var selection = $('#Input_Role Option:Selected').text();
                if (selection == "Company") {
                    $('#Input_CompanyId').show();
                }
                else {
                    $('#Input_CompanyId').hide();
                }
            })
        })
    </script>
}
