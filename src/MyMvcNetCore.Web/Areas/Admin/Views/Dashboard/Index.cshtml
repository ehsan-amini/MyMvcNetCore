@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h2 class="mb-4">📊 Dashboard</h2>

    <!-- Stats Cards -->
    <div class="row g-3">
        <div class="col-12 col-sm-6 col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Users</h6>
                    <h3>540</h3>
                    <small>Total Registered Users</small>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Orders</h6>
                    <h3>120</h3>
                    <small>New / Processing / Shipped</small>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Today Sales</h6>
                    <h3>$1,250</h3>
                    <small>Daily Revenue</small>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Monthly Sales</h6>
                    <h3>$32,800</h3>
                    <small>Revenue this Month</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts + Top Products -->
    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">Sales Overview</div>
                <div class="card-body">
                    <canvas id="salesChart" height="150"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header">Top Selling Products</div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            iPhone 14 <span class="badge bg-primary rounded-pill">120</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Samsung S23 <span class="badge bg-primary rounded-pill">95</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            MacBook Pro <span class="badge bg-primary rounded-pill">80</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            AirPods Pro <span class="badge bg-primary rounded-pill">70</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="card mt-4 shadow-sm">
        <div class="card-header">Recent Orders</div>
        <div class="card-body table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#ID</th>
                        <th>Customer</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>#1001</td>
                        <td>Ali Reza</td>
                        <td>$120</td>
                        <td><span class="status-badge completed">✔ Completed</span></td>
                        <td class="date-cell">09 Sep 2025</td>
                    </tr>
                    <tr>
                        <td>#1002</td>
                        <td>Sara</td>
                        <td>$250</td>
                        <td><span class="status-badge pending">⏳ Pending</span></td>
                        <td class="date-cell">09 Sep 2025</td>
                    </tr>
                    <tr>
                        <td>#1003</td>
                        <td>Mohammad</td>
                        <td>$90</td>
                        <td><span class="status-badge cancelled">✖ Cancelled</span></td>
                        <td class="date-cell">08 Sep 2025</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>